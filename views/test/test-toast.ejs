<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toast Notification Component Demo</title>
    <link rel="stylesheet" href="/assets/css/toast.css">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            padding: 40px;
            background: #f9fafb;
            margin: 0;
        }
        
        .demo-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }
        
        .demo-section {
            margin-bottom: 30px;
        }
        
        .demo-section h2 {
            color: #111827;
            margin-bottom: 15px;
            font-size: 18px;
        }
        
        .demo-section h3 {
            color: #374151;
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        .demo-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .demo-btn {
            padding: 10px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s;
        }
        
        .demo-btn.success {
            background: #14b278;
            color: white;
        }
        
        .demo-btn.error {
            background: #ef4444;
            color: white;
        }
        
        .demo-btn.warning {
            background: #f59e0b;
            color: white;
        }
        
        .demo-btn.info {
            background: #3b82f6;
            color: white;
        }
        
        .demo-btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }
        
        .code-block {
            background: #f3f4f6;
            padding: 16px;
            border-radius: 6px;
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 13px;
            color: #374151;
            overflow-x: auto;
            margin: 10px 0;
        }
        
        .integration-guide {
            background: #eff6ff;
            border: 1px solid #dbeafe;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
        }
        
        .integration-guide h3 {
            color: #1e40af;
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="demo-container">
        <h1>Toast Notification Component Demo</h1>
        <p>This demo showcases the toast notification component with various options and configurations.</p>
        
        <div class="integration-guide">
            <h3>ðŸš€ Quick Integration</h3>
            <p>To use toasts in your project:</p>
            <div class="code-block">
<!-- Include CSS and JS in your page -->
&lt;link rel="stylesheet" href="assets/css/toast.css"&gt;
&lt;script src="assets/js/toast.js"&gt;&lt;/script&gt;

&lt;script&gt;
// Show a success toast
Toast.success('Operation completed successfully!');

// Show toast with message
Toast.success('Success!', 'User account has been deactivated.');

// Custom toast with options
Toast.show({
    type: 'success',
    title: 'Custom Toast',
    message: 'This is a custom message',
    icon: '/assets/images/success.svg',
    duration: 5000
});
&lt;/script&gt;
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Basic Toast Types</h2>
            <div class="demo-buttons">
                <button class="demo-btn success" onclick="showSuccessToast()">Success Toast</button>
                <button class="demo-btn error" onclick="showErrorToast()">Error Toast</button>
                <button class="demo-btn warning" onclick="showWarningToast()">Warning Toast</button>
                <button class="demo-btn info" onclick="showInfoToast()">Info Toast</button>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Toast with Messages</h2>
            <div class="demo-buttons">
                <button class="demo-btn success" onclick="showSuccessWithMessage()">Success with Message</button>
                <button class="demo-btn error" onclick="showErrorWithMessage()">Error with Message</button>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Custom Duration</h2>
            <div class="demo-buttons">
                <button class="demo-btn info" onclick="showShortToast()">Short Duration (2s)</button>
                <button class="demo-btn info" onclick="showLongToast()">Long Duration (10s)</button>
                <button class="demo-btn info" onclick="showPersistentToast()">Persistent Toast</button>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Custom Icons</h2>
            <div class="demo-buttons">
                <button class="demo-btn success" onclick="showCustomIconToast()">Custom Icon Toast</button>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Multiple Toasts</h2>
            <div class="demo-buttons">
                <button class="demo-btn info" onclick="showMultipleToasts()">Show Multiple Toasts</button>
                <button class="demo-btn error" onclick="hideAllToasts()">Hide All Toasts</button>
            </div>
        </div>
        
        <div class="demo-section">
            <h2>Real-world Examples</h2>
            <div class="demo-buttons">
                <button class="demo-btn success" onclick="showUserDeactivatedToast()">User Deactivated</button>
                <button class="demo-btn success" onclick="showDataSavedToast()">Data Saved</button>
                <button class="demo-btn error" onclick="showValidationErrorToast()">Validation Error</button>
                <button class="demo-btn warning" onclick="showWarningExampleToast()">Session Expiring</button>
            </div>
        </div>
    </div>

    <script src="/assets/js/toast.js"></script>
    <script>
        // Define functions globally
        // Basic toast functions
        function showSuccessToast() {
            Toast.success('Operation completed successfully!');
        }
        
        function showErrorToast() {
            Toast.error('Something went wrong!');
        }
        
        function showWarningToast() {
            Toast.warning('Please check your input!');
        }
        
        function showInfoToast() {
            Toast.info('Information message');
        }
        
        // Toast with messages
        function showSuccessWithMessage() {
            Toast.success('Success!', 'Your changes have been saved successfully.');
        }
        
        function showErrorWithMessage() {
            Toast.error('Error!', 'Failed to save changes. Please try again.');
        }
        
        // Custom duration toasts
        function showShortToast() {
            Toast.info('Short message', 'This will disappear in 2 seconds', { duration: 2000 });
        }
        
        function showLongToast() {
            Toast.info('Long message', 'This will disappear in 10 seconds', { duration: 10000 });
        }
        
        function showPersistentToast() {
            Toast.info('Persistent message', 'This will not auto-dismiss', { duration: 0 });
        }
        
        // Custom icon toast
        function showCustomIconToast() {
            Toast.show({
                type: 'success',
                title: 'Custom Icon Toast',
                message: 'This toast uses the success.svg icon',
                icon: '/assets/images/success.svg',
                duration: 5000
            });
        }
        
        // Multiple toasts
        function showMultipleToasts() {
            Toast.success('First toast');
            setTimeout(() => Toast.info('Second toast'), 200);
            setTimeout(() => Toast.warning('Third toast'), 400);
        }
        
        function hideAllToasts() {
            Toast.hideAll();
        }
        
        // Real-world examples
        function showUserDeactivatedToast() {
            Toast.success('User account has been deactivated.');
        }
        
        function showDataSavedToast() {
            Toast.success('Data Saved', 'Your changes have been saved successfully.');
        }
        
        function showValidationErrorToast() {
            Toast.error('Validation Error', 'Please fill in all required fields.');
        }
        
        function showWarningExampleToast() {
            Toast.warning('Session Expiring', 'Your session will expire in 5 minutes.');
        }

        // Initialize Toast when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            // You can add any initialization code here if needed
            console.log('Toast demo initialized');
        });
    </script>
</body>
</html>
