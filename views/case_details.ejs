            // Function to show approve modal
            function showApproveModal(simulationId) {
                const approveModal = document.getElementById('approveModal');
                if (approveModal) {
                    // Store the simulation ID for the confirm action
                    approveModal.setAttribute('data-simulation-id', simulationId);
                    approveModal.classList.add('show');
                }
            }

            // Function to show revoke modal
            function showRevokeModal(simulationId) {
                const revokeModal = document.getElementById('revokeModal');
                if (revokeModal) {
                    // Store the simulation ID for the confirm action
                    revokeModal.setAttribute('data-simulation-id', simulationId);
                    revokeModal.classList.add('show');
                }
            }

            // Simulation action functions
            async function approveSimulation(simulationId) {
                try {
                    const response = await axios.post(`/action-simulation-plan?caseid=${window.CASE_ID}&simulation_number=${simulationId}&action=Approved`, {
                    }).then(response => {
                        if (response.status === 201) {
                            //close modal
                            const approveModal = document.getElementById('approveModal');
                            approveModal.classList.remove('show');
                            Toast.success(response.data.message);
                            
                            // Update UI instead of reloading
                            updateSimulationUI(simulationId, 'Approved');
                        } else {
                            Toast.error(response.data.message);
                        }
                    });
                } catch (error) {
                    console.log('error', error);
                    if (error.response && error.response.data && error.response.data.message) {
                        Toast.error(error.response.data.message);
                    } else {
                        Toast.error('Network error. Please try again.');
                    }
                }
            }
            
            async function revokeSimulation(simulationId) {
                try {
                    const response = await axios.post(`/action-simulation-plan?caseid=${window.CASE_ID}&simulation_number=${simulationId}&action=Revoke`, {
                    }).then(response => {
                        if (response.status === 201) {
                            //close modal
                            const revokeModal = document.getElementById('revokeModal');
                            revokeModal.classList.remove('show');
                            Toast.success(response.data.message);
                            
                            // Update UI instead of reloading
                            updateSimulationUI(simulationId, 'Revoke');
                        } else {
                            Toast.error(response.data.message);
                        }
                    });
                } catch (error) {
                    console.log('error', error);
                    if (error.response && error.response.data && error.response.data.message) {
                        Toast.error(error.response.data.message);
                    } else {
                        Toast.error('Network error. Please try again.');
                    }
                }
                
            }

            // Function to update simulation UI without page reload
            function updateSimulationUI(simulationId, action) {
                // Find the simulation container based on the simulationId
                const simulationContainer = document.querySelector(`.btn-${action === 'Approved' ? 'approve' : 'revoke'}[data-simulation-id="${simulationId}"]`).closest('.simulation-plan');
                
                if (!simulationContainer) return;
                
                // Get the plan header element
                const planHeader = simulationContainer.querySelector('.plan-header');
                
                if (action === 'Approved') {
                    // Update UI for Approved action
                    
                    // Remove existing approve button
                    const approveBtn = simulationContainer.querySelector('.btn-approve');
                    if (approveBtn) approveBtn.remove();
                    
                    // Add status badge if not exists
                    let statusBadge = planHeader.querySelector('.pill-badge');
                    if (!statusBadge) {
                        statusBadge = document.createElement('span');
                        statusBadge.className = 'pill-badge badge-green';
                        statusBadge.textContent = 'Approved';
                        planHeader.appendChild(statusBadge);
                    } else {
                        statusBadge.textContent = 'Approved';
                    }
                    
                    // Add revoke button if not exists
                    if (!simulationContainer.querySelector('.btn-revoke')) {
                        const revokeBtn = document.createElement('button');
                        revokeBtn.className = 'btn btn-revoke';
                        revokeBtn.setAttribute('data-simulation-id', simulationId);
                        revokeBtn.textContent = 'Revoke';
                        planHeader.appendChild(revokeBtn);
                        
                        // Add event listener to the new button
                        revokeBtn.addEventListener('click', (e) => {
                            e.preventDefault();
                            showRevokeModal(simulationId);
                        });
                    }
                } else if (action === 'Revoke') {
                    // Update UI for Revoke action
                    
                    // Remove existing revoke button
                    const revokeBtn = simulationContainer.querySelector('.btn-revoke');
                    if (revokeBtn) revokeBtn.remove();
                    
                    // Remove status badge if exists
                    const statusBadge = planHeader.querySelector('.pill-badge');
                    if (statusBadge) statusBadge.remove();
                    
                    // Add approve button if not exists
                    if (!simulationContainer.querySelector('.btn-approve')) {
                        const approveBtn = document.createElement('button');
                        approveBtn.className = 'btn btn-approve';
                        approveBtn.setAttribute('data-simulation-id', simulationId);
                        approveBtn.textContent = 'Approve';
                        planHeader.appendChild(approveBtn);
                        
                        // Add event listener to the new button
                        approveBtn.addEventListener('click', (e) => {
                            e.preventDefault();
                            showApproveModal(simulationId);
                        });
                    }
                }
            }

             // Show success toast if message is passed via URL parameter
             const successMessageElement = document.getElementById('success-message');
            if (successMessageElement && successMessageElement.dataset.message) {
                const message = successMessageElement.dataset.message;
                Toast.success(message);
                window.history.replaceState({}, '', window.location.pathname);
            }
        });
