            function generateCommentsHTML(comments) {
                let html = '';
                
                if (!comments || comments.length === 0) {
                    return html; // Return empty string if no comments
                }
                
                comments.forEach(comment => {
                    // Format date as DD/MM/YYYY HH:MM
                    const date = new Date(comment.created_time || comment.updated_time);
                    const day = String(date.getDate()).padStart(2, '0');
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const year = date.getFullYear();
                    const hours = String(date.getHours()).padStart(2, '0');
                    const minutes = String(date.getMinutes()).padStart(2, '0');
                    const formattedDate = `${day}/${month}/${year} ${hours}:${minutes}`;
                    
                    // Replace newlines with <br> to preserve formatting
                    const formattedComment = comment.comments ? comment.comments.replace(/\n/g, '<br>') : '';
                    
                    html += `
                         <div class="comment-container">
                            <div class="comment-item">
                                <div class="comment-avatar">${comment.name.charAt(0)}</div>
                                <div class="comment-content">
                                    <div class="comment-header">
                                        <span class="comment-author">${comment.name}</span>
                                        <span class="comment-time">${formattedDate}</span>
                                    </div>
                                    <div class="comment-text">
                                        ${formattedComment}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
                return html;
            }

            // The sendCommentBtn event listener is now attached in the loadComments function
            
            // Extract the sendComment function to be able to reuse it
            function sendComment() {
                const comment = document.querySelector('.comment-input').value;
                if (!comment.trim()) {
                    Toast.error('Please enter a comment');
                    return;
                }
                
                const sendCommentBtn = document.getElementById('sendCommentBtn');
                sendCommentBtn.textContent = 'Sending...';
                sendCommentBtn.classList.add('loading');
                
                axios.post(`/update-comment?caseid=${window.CASE_ID}`, { comments: comment })
                    .then(response => {
                        document.querySelector('.comment-input').value = '';
                        sendCommentBtn.textContent = 'Send';
                        sendCommentBtn.classList.remove('loading');
                        
                        // Fetch updated comments
                        axios.get(`/get-comment/${window.CASE_ID}`)
                            .then(response => {
                                const comments = response.data.save_comment;
                                const commentsContainer = document.getElementById('comments-container');
                                
                                // Update only the comments container, not the entire section
                                if (comments && comments.length > 0) {
                                    commentsContainer.innerHTML = generateCommentsHTML(comments);
                                } else {
                                    commentsContainer.innerHTML = '<p class="no-comments-message">No comments yet. Be the first to comment!</p>';
                                }
                                
                                Toast.success('Comment added successfully');
                                
                                // Scroll to the bottom of the comments to see the new comment
                                commentsContainer.scrollTop = commentsContainer.scrollHeight;
                            })
                            .catch(error => {
                                console.error('Error fetching comments:', error);
                                Toast.error('Failed to refresh comments');
                            });
                    })
                    .catch(error => {
                        console.error('Error sending comment:', error);
                        sendCommentBtn.textContent = 'Send';
                        sendCommentBtn.classList.remove('loading');
                        Toast.error(error.response?.data?.message || 'Failed to send comment');
                    });
            }
            
