<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Treatment Plan - Doctor Portal</title>
    <link rel="stylesheet" href="/assets/css/side_menu.css">
    <link rel="stylesheet" href="/assets/css/add_treatment_plan.css">
    <script src="/assets/js/components.js"></script>
</head>
<body>
    <!-- Navigation Rail Component -->
    <div id="navRail"></div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-container">
            <!-- Breadcrumb -->
            <nav class="breadcrumb">
                <a href="/aligners-cases" class="breadcrumb-item">Home</a>
                <span class="breadcrumb-separator">
                    <img src="/assets/images/breadcrumb-arrow.svg" alt="Breadcrumb Arrow">
                </span>
                <span class="breadcrumb-item">Case Details C0000<%= caseId %></span>
                <span class="breadcrumb-separator">
                    <img src="/assets/images/breadcrumb-arrow.svg" alt="Breadcrumb Arrow">
                </span>
                <span class="breadcrumb-item active">Add Treatment Plan</span>
            </nav>

            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Add Treatment Plan</h1>
            </div>

            <!-- Add Treatment Plan Form -->
            <form class="treatment-plan-form" id="treatmentPlanForm">
                <!-- Form Container -->
                <div class="form-container">
                    <div class="form-section">
                        <h2 class="section-title">Plan 2</h2>
                        <div class="form-content">
                            <div class="form-field">
                                <label for="simulationUrl" class="form-label">
                                    <span class="required-asterisk">*</span>
                                    <span class="label-text">Simulation URL</span>
                                </label>
                                <input 
                                    type="url" 
                                    id="simulationUrl" 
                                    name="simulationUrl" 
                                    class="form-input" 
                                    placeholder="http.domainname.com"
                                >
                            </div>

                            <div class="form-field">
                                <label for="iprFile" class="form-label">
                                    <span class="required-asterisk">*</span>
                                    <span class="label-text">IPR <span class="pdf-required">(*PDF)</span></span>
                                </label>
                                <div class="file-upload-container">
                                    <input 
                                        type="file" 
                                        id="iprFile" 
                                        name="iprFile" 
                                        class="file-input" 
                                        accept=".pdf"
                                    >
                                    <label for="iprFile" class="file-upload-label">
                                        <span class="file-placeholder">Choose File</span>
                                        <img src="/assets/images/document-icon.svg" alt="Document Icon" class="file-icon">
                                    </label>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions Container -->
                <div class="form-container">
                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <script>
        // Load navigation rail component
        document.addEventListener('DOMContentLoaded', () => {
            loadComponent('navRail', '/components/side-menu');
        });

        // File upload functionality
        document.getElementById('iprFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const placeholder = document.querySelector('.file-placeholder');
            const fileUploadLabel = document.querySelector('.file-upload-label');
            
            if (file) {
                placeholder.textContent = file.name;
                
                // Add cancel button for uploaded file
                let cancelBtn = fileUploadLabel.querySelector('.cancel-upload');
                if (!cancelBtn) {
                    cancelBtn = document.createElement('button');
                    cancelBtn.className = 'cancel-upload';
                    cancelBtn.type = 'button';
                    cancelBtn.innerHTML = '<img src="/assets/images/cancel-file-upload.svg" alt="Remove file">';
                    
                    // Hide the file icon
                    const fileIcon = fileUploadLabel.querySelector('.file-icon');
                    if (fileIcon) {
                        fileIcon.style.display = 'none';
                    }
                    
                    fileUploadLabel.appendChild(cancelBtn);
                    
                    // Add click handler to remove file
                    cancelBtn.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        
                        // Clear the file input
                        this.value = '';
                        
                        // Reset the UI
                        placeholder.textContent = 'Choose File';
                        cancelBtn.remove();
                        
                        // Show the file icon again
                        if (fileIcon) {
                            fileIcon.style.display = 'block';
                        }
                        
                        // Clear any validation state
                        if (window.formValidation) {
                            window.formValidation.clearValidation(this);
                        }
                    });
                }
            } else {
                placeholder.textContent = 'Choose File';
                
                // Remove cancel button if it exists
                const cancelBtn = fileUploadLabel.querySelector('.cancel-upload');
                if (cancelBtn) {
                    cancelBtn.remove();
                }
                
                // Show the file icon again
                const fileIcon = fileUploadLabel.querySelector('.file-icon');
                if (fileIcon) {
                    fileIcon.style.display = 'block';
                }
            }
        });

        // Form submission
        document.querySelector('.treatment-plan-form').addEventListener('submit', function(e) {
            e.preventDefault();
            // Handle form submission here
            console.log('Form submitted');
        });
    </script>
</body>
</html>